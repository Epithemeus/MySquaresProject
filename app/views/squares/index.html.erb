<h1>Listing squares</h1>

<table>
  <tr>
    <th>Length</th>
    <th>Width</th>
  </tr>

  <% @squares.each do |square| %>
    <tr>
      <td><%= square.width %></td>
      <td><%= square.length %></td>
      <td><%= link_to 'Edit', edit_square_path(square), class => "button" %></td>
      <td><%= link_to 'Delete', square_path(square),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'Add a new rectangle', new_square_path, class=> "button" %>
