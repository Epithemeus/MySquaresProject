<h1>Make a Square</h1>

<%= form_for :square, url: squares_path do |f| %>

<p>
  <%= f.label :length %><br>
  <%= f.number_field :length, in: 1..20 %>
</p>

<p>
  <%= f.label :width %><br>
  <%= f.number_field :width, in: 1..20 %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>
<%= link_to 'Back', squares_path %>
