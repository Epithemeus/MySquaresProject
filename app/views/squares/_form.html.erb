<%= form_for @square do |f| %>

<% if @square.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@square.errors.count, "error") %> meant your awesome new rectangle
        is in fact not awesome and is invalid.
      </h2>
      <ul>
        <% @square.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<p>
  <%= f.label :length %><br>
  <%= f.number_field :length, in: 1..2000, value: 1 %>
</p>

<p>
  <%= f.label :width %><br>
  <%= f.number_field :width, in: 1..2000, value: 1 %>
</p>

<p>
  <%= f.label :color %><br>
  <%= f.color_field :color %>
</p>

<p>
  <%= f.submit "Save Rectangle"%>
</p>

<% end %>
